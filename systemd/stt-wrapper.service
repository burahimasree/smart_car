[Unit]
Description=STT Service (dsnoop capture)
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/dev/project_root
ExecStart=/home/dev/project_root/.venvs/stte/bin/python -m src.stt.service --config config/system.yaml
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
